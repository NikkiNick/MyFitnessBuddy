<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="android.example.myfitnessbuddy.fragments.WelcomeFragment"
        android:label="@string/welcome"
        tools:layout="@layout/fragment_welcome" >
        <action
            android:id="@+id/action_welcomeFragment_to_addTrainingActivity"
            app:destination="@id/addTrainingActivity" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="android.example.myfitnessbuddy.fragments.AboutFragment"
        android:label="@string/about" />
    <activity
        android:id="@+id/addTrainingActivity"
        android:name="android.example.myfitnessbuddy.activities.AddTrainingActivity"
        android:label="AddTrainingActivity" />
</navigation>